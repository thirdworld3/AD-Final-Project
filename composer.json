{
    "name": "com-1/project-management-system",
    "description": "A PHP project management system with PostgreSQL and MongoDB integration",
    "type": "project",
    "authors": [
        {
            "name": "Student Developer",
            "email": "student@example.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-mongodb": "*",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "postgresql:reset": "php utils/dbResetPostgresql.util.php",
        "postgresql:seed": "php utils/dbSeederPostgresql.util.php",
        "postgresql:migrate": "php utils/dbMigratePostgresql.util.php"
    },
    "config": {
        "optimize-autoloader": true
    }
}
